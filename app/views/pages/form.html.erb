<h1>When are you available tomorrow?</h1>

<div data-controller="wizard">
  <%= simple_form_for @model do |f|  %>
    <div data-wizard-target="step">
      <%= f.input :morning, as: :boolean %>
      <%= f.input :afternoon, as: :boolean %>
      <%= f.input :evening, as: :boolean %>

      <%= button_tag "Next", type: "button",
        data: {
          action: "click->wizard#goToNext",
          next_step: "1"
        } %>
    </div>

    <div data-wizard-target="step" class="hidden">
      <%= f.input :surfing, as: :boolean %>

      <%= button_tag "Previous", type: "button",
        data: {
          action: "click->wizard#goToPrevious",
          previous_step: "1"
        } %>
      <%= button_tag "Next", type: "button",
        data: {
          action: "click->wizard#goToNext",
          next_step: "2"
        } %>
    </div>

    <div data-wizard-target="step" class="hidden">
      <% "your inputs" %>

      <%= button_tag "Previous", type: "button",
        data: {
          action: "click->wizard#goToPrevious",
          previous_step: "2"
        } %>
      <%= f.button :submit, class: "btn-primary" %>
    </div>
  <% end %>
</div>
