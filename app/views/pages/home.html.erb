
<div id="greeting-header"><h2>Hello, <%= current_user.user_name %></h2></div>

<div class="last-event-card">
  <div class="last-event-card-header">Events Today</div>
  <% if @events_today.empty? %>
      <p id="last-event-card-empty-today">No events planned for today 😔</p>
  <% else %>
    <% @events_today.each do |event| %>
      <div class="last-event-card-content">
        <div class="last-event-card-titleandcount"><%= event.title %> <br> <%= event.user_events.count %> attendees</div>
        <div class="last-event-card-date"><%=event.time_of_event.strftime("%-l:%M %P") %></div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="event-cards-container">
  <div id="past-events-header"><h3>Your Past Events</h3></div>
  <% @past_events.each do |event| %>
    <div class="card-event">
        <%= image_tag event.user.avatar, class: "card-event-avatar" %>
          <div class="card-event-textcontent">
            <div class="card-event-title"><%= event.title %></div>
            <div class="card-event-useramount"><%= event.user_events.count %>/10 Potatoes Joining</div>
            <div class="card-event-dateandtime"><%=event.date.strftime("%-d/%m/%y")%> | <%=event.time_of_event.strftime("%-l:%M %P") %></div>
          </div>
          <div class="card-event-locationandtimeofday">
            <%= image_tag event.image_source, class: "card-event-timeofday-icon" %>
            <div class="card-event-location">📍 <%=event.address%></div>
          </div>
      </div>
  <% end %>
</div>
