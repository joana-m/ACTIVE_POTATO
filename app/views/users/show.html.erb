  <div class="card-profile">

    <div class="banner-profile mt-3">
      <%= image_tag @user.avatar, class: "avatar-square" %>
    </div>
  </div>
  <div class="card-profile-details">
    <h2 class="text-justify text-center mt-3"><%= @user.user_name %></h2>
    <p class="text-justify text-center"><%= @user.bio %></p>
    <div class="d-flex justify-content-center">
      <div class="profile-page-card p-1">
        <h2>Events attended </h2>
        <%= @user.joined_events.size %>
      </div>
      <div class="profile-page-card p-1">
        <h2>Friends</h2>
        <%= @user.joined_events.size %>
      </div>
    </div>
    <div class="card-profile-bottom">
        <h2 class="mt-3">Favorite Sport</h2>
        <p> Surf</p>
      </div>
  </div>

<div class="d-flex justify-content-center">
