<div>
  <div class="mt-3">
    <%= link_to "Back", :back %>
  </div>
  <div class="card-profile">

    <div class="banner-profile mt-3">
      <%= image_tag @user.avatar, class: "avatar-square" %>
    </div>
  </div>
  <div class="card-profile-details">
    <h2 class="text-justify text-center mt-3"><%= @user.user_name %></h2>
    <p class="text-justify text-center main-p"><%= @user.bio %></p>
    <div class="d-flex justify-content-center">
      <div class="profile-page-card p-4">
        <h2><%= @user.joined_events.size + @user.events.size %></h2>
        <p>Events</p>
      </div>
      <div class="profile-page-card p-4">
        <h2><%= @user.friends.size %></h2>
        <p>Friends</p>
      </div>
    </div>
    <div class="card-profile-bottom mt-2">
        <h2> Active bar</h2>
        <% if @user.joined_events.size + @user.events.size > 3 %>
          <%= image_tag "bar-3.png" %>
        <% elsif @user.joined_events.size + @user.events.size <= 3  %>
          <%= image_tag "bar-2.png" %>
        <% end %>
      </div>
  </div>

<div class="d-flex justify-content-center">
  <h2 class="btn-purple join-btn mt-5">
   <% if !Popular::Friendship.find_by(friend: [@user, current_user], popular_model_id: [@user, current_user]) %>
    <%= link_to 'Follow', user_friendships_path(@user), method: :post, class: "text-white" %>
  <% else %>
    <%= link_to "Unfollow", user_unfriend_path(@user), method: :delete, class: "text-white" %>
  <% end %>
  </h2>
</div>

</div>
