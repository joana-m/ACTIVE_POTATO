<div>
  <div class="card-profile">

    <div class="banner-profile mt-3">
      <%= image_tag @user.avatar, class: "avatar-square" %>
    </div>
  </div>
  <div class="card-profile-details">
    <h2 class="text-justify text-center"><%= @user.user_name %></h2>
    <br/>
    <p class="text-justify"><%= @user.bio %></p>
    <br/>
    <div class="d-flex justify-content-center">
      <div class="profile-page-card p-1">
        <h2 class="h4">Events attended - <%= @user.joined_events.size %></h2>
      </div>
      <div class="profile-page-card p-1">
        <h2 class="h4">Favorite Sports</h2>
        <p class="text-start"> - Surf</p>
        <p class="text-start"> - Hiking</p>
      </div>
    </div>
  </div>

<div class="d-flex justify-content-center">
  <h2 class="btn-purple join-btn">Add friend</h2>
</div>

  <%= link_to "Back", :back %>
</div>
