<div>
<h1><%=@random_event.date.strftime("%-d/%m/%y")%></h1>
<% @grouped_events.each do |sport, events| %>
  <div class="event-cards-container">
    <div class="sport-type-header"><h3><%= sport %></h3></div>
    <% events.each do |event| %>
      <%= link_to event_path(event), class:"card-message" do %>
        <div class="card-event">
          <%= image_tag event.user.avatar, class: "card-event-avatar" %>
          <div class="card-event-textcontent">
            <div class="card-event-title"><%= event.title %></div>
            <div class="card-event-useramount"><%= event.user_events.count %>/10 Potatoes Joining</div>
            <div class="card-event-dateandtime"><%=event.time_of_event.strftime("%-l:%M %P") %></div>
          </div>
          <div class="card-event-locationandtimeofday">
            <%= image_tag event.image_source, class: "card-event-timeofday-icon" %>
            <div class="card-event-location">üìç <%=event.address%></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
</div>
